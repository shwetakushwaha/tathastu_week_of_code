run_player1 = int(input("enter the no. of runs scored by player1: "))
run_player2 = int(input("enter the no.of runs scored by the player 2 :"))
run_player3 =  int(input("enter the no. of runs scored by the player 3 : "))
print("the strike rate of player 1 is ",(run_player1/60))
print("the strike rate of player 2 is ",(run_player2/60))
print("the strike rate of player 3 is ",(run_player3/60))
print("if player 1 plays 60 balls more the no. of runs will be",(run_player1*2))
print("if player 2 plays 60 balls more the no. of runs will be",(run_player2*2))
print("if player 3 plays 60 balls more the no. of runs will be",(run_player3*2))
print("maximum no. of sixes player 1 could have hit is",(run_player1//6))
print("maximum no. of sixes player 2 could have hit is",(run_player2//6))
print("maximum no. of sixes player 3 could have hit is",(run_player3//6))
